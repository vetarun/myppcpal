@model Mpp.WEB.Models.ResetPasswordViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title | MyPPCPal</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.13/angular.min.js"></script>
    @*<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />*@
    <link href="~/Content/adminapp.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
</head>
<body class="darkBg">
    <div class="mainContainer">
        <header class="mainHeader clearfix">
            <div class="logo pull-left">
                <a href="#"><img src="~/Content/images/logo.png" alt=""></a>
            </div>
        </header>
        <div class="mainContent">
            <div class="mainWrap" style="padding: 0;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="container">
                            <div class="col-md-8 col-md-push-2">
                                <div class="md-box">
                                    <h1>Reset Password</h1>
                                    @using (Html.BeginForm("ResetPassword", "Account", routeValues: new { area="Admin"}, method: FormMethod.Post, htmlAttributes: new { id = "resetForm" }))
                                    {
                                    @*@Html.ValidationSummary()*@
                                    @*@Html.AntiForgeryToken()*@
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", placeholder = "Password" })
                                        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "form-control", placeholder = "Confirm Password" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-block btn-info">Save</button>
                                        @Html.HiddenFor(model => model.UserId)
                                    </div>
                                        if (TempData["IsValid"] != null)
                                        {
                                    <div class="form-group resultmsg text-danger">
                                        <span>@TempData["IsValid"]</span>
                                    </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="mainFooter clearfix">
            <div class="logoFooter pull-left">
                <a href=""><img src="~/Content/images/logo-footer.jpg" alt=""></a>
            </div>
            <nav class="footerNav pull-right">
                <ul class="list-unstyled">
                    <li>Copyright © 2017, MyPPCPal</li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms of Use</a></li>
                </ul>
            </nav>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
