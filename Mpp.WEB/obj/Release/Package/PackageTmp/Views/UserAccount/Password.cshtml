@model Mpp.WEB.Models.EmailViewModel
@{
    ViewBag.Title = "Forget Password";
    Layout = "~/Views/Shared/_UserAccount.cshtml";
}

<div class="container">
    <div class="col-md-8 col-md-push-2">
        <div class="md-box" style="margin-top:100px!important;">
            <h1>Forgot your password?</h1>
            <p>Don’t worry! Just fill in your email and we’ll help you reset your password.</p>
            @using (Html.BeginForm("Password", "UserAccount", routeValues: null, method: FormMethod.Post, htmlAttributes: new { id = "resetForm" }))
            {
                @*@Html.ValidationSummary()*@
                @*@Html.AntiForgeryToken()*@
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", placeholder = "Enter your email address" })
                    @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-info">Send Email</button>
                </div>
                if (TempData["IsValid"] != null)
                {
                    <div class="form-group resultmsg text-danger">
                        <span>@TempData["IsValid"]</span>
                    </div>
                }
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            }
        </div>
    </div>
</div>